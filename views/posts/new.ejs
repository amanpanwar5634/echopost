<% layout("/layouts/boilerplate") %>
 <div class="row">
<div class="col-8 offset-2"> 
    <h1>Create Post</h1>
    <form method="post" action="/posts" novalidate class="needs-validation" enctype="multipart/form-data">
   <div class="mb-3">
   <label for="title" class="form-level">Tile</label>
    <input placeholder="enter the title" id="title" name="post[title]" class="form-control" required> 
    <div class="valid-feedback"> Looks good!</div>
    <div class="invalid-feedback">Please enter title</div>
</div>
    <div class="mb-3">
        <label for="caption" class="form-level">Caption</label>
         <input placeholder="enter the caption" id="caption" name="post[caption]" class="form-control" required> 
         <div class="valid-feedback"> Nice caption!</div>
         <div class="invalid-feedback">Please enter caption/div>
        </div>
 
     <div class="mb-3">
        <label for="location" class="form-level">Location</label>
         <input placeholder="enter the location" id="location" name="post[location]" class="form-control" required> 
         <div class="invalid-feedback">Please enter location</div>
     </div>
 
     <div class="mb-3">
        <label for="country" class="form-level">Country</label>
         <input placeholder="enter the country" id="country" name="post[country]" class="form-control" required> 
         <div class="invalid-feedback">Please enter country</div>
     </div>

     <div class="mb-3">
        <label for="image" class="form-level">Enter post image</label>
         <input type="file" id="image" name="post[image]" class="form-control"> 
     </div>
    <button class="btn btn-dark">submit</button>
    </form>
</div>
</div>
 